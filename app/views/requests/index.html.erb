<% provide :title, "Request" %>
<h1>Make request</h1>
<%= form_for [current_user, Request.new], remote: true do |f| %>
  <%= f.label :book_name %>
  <%= f.text_field :book_name %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :book_url %>
  <%= f.text_field :book_url %>
  <%= f.submit "Send request", class:"btn btn-primary" %>
<% end %>
<h1>Request list</h1>
<table id="requests" class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><div class="col-md-2">Book</div></th>
      <th><div class="col-md-2">Author</div></th>
      <th><div class="col-md-4">Book url</div></th>
      <th><div class="col-md-2">State</div></th>
      <th><div class="col-md-2">Action</div></th>
    </tr>
  </thead>  
  <tbody>
    <%= render current_user.requests %>
  </tbody>
</table>