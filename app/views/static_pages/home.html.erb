<% provide :title, "Home" %>
<% if user_signed_in? %>
  <% @user ||= current_user %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'devise/shared/user_info' %>
      </section>
      <section>
        <%= render 'devise/shared/stats' %>
      </section>
    </aside>
    <div class="col-md-8">
    </div>
  </div>

<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Framgia Book Reviewing System</h1>
    <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>