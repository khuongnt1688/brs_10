<li id="review-<%= review.id %>">
  <div class="user">
    <%= link_to review.user.name, review.user %>
    <strong><%= review.rating %>/10</strong>
  </div>
  <div class="title">
    <%= review.content[0..50] %>...
    <%= link_to "see more", [review.book, review] %>
  </div>
  <div class="timestamp">
    Posted <%= time_ago_in_words review.created_at %> ago.
    <%= link_to_if(current_user.is_user?(review.user), 
          "edit", 
          edit_book_review_path(review.book, review)){} %>
    ||
    <%= link_to_if(current_user.is_user?(review.user), 
          "delete", 
          [review.book, review], remote: true,
          method: :delete, 
          data: {confirm: "You sure?"}){} %>
  </div>
</li>