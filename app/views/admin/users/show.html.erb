<% provide :title, @user.name %>
<h2><%= @user.name %></h2>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      
    </section>
  </aside>
  <div class="col-md-8">
    <div class="col-md-12">
      <div class="col-md-4">
        <%= image_tag "#{@user.avatar}", id: "book-image", alt: "Book" %>
      </div>
      <div class="col-md-8">
        <div class="col-md-12">User : <%= @user.name %></div>
      </div>
    </div>
    <div class="col-md-12">
      <%= link_to("delete", admin_user_path(@user), method: :delete, 
                                                  data: {confirm: "you sure?"}) %>
    </div>
    <div class="col-md-12">
      <h1>Activities</h1>
      
    </div>
  </div>
</div> 